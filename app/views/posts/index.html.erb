<div class="row">
  <div class="col-md-3">
    <%= render 'posts/partials/left_sidebar' %>
  </div>
  <div class="col-md-9">
    <p id="notice"><%= notice %></p>
    <%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-md pull-right" %>

    <table class="table table-striped custab">
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Tag</th>
        <th>Category</th>
        <th>Original</th>
        <th>Translation</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody id="post">
      <%= render 'posts/partials/tbody', posts: @posts %>
      </tbody>
    </table>

    <br>


  </div>

</div>