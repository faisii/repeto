<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <div id="accordion" class="panel panel-primary behclick-panel">
        <div class="panel-heading bg-dark">
          <h3 class="panel-title">Filter Your Result</h3>
        </div>
        <div class="panel-body" >
          <div class="panel-heading " >
            <h4 class="panel-title">
              <a data-toggle="collapse" href="#collapse0">
                <i class="indicator fa fa-caret-down" aria-hidden="true"></i> Sort by language
              </a>
            </h4>
          </div>
          <%= form_for :search, remote: true, method: :get, html: {id: 'post-form'} do %>
            <div id="collapse0" class="panel-collapse collapse in" >
              <ul class="list-group">
                <% Category.all.each do |c| %>
                  <li class="list-group-item">
                    <div class="checkbox">
                      <label>
                        <%= check_box_tag("post[category][]", c.id, false, class: 'post-checkbox') %>
                        <%= c.name %>
                      </label>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>

            <div class="panel-heading " >
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">
                  <i class="indicator fa fa-caret-down" aria-hidden="true"></i> Sort by Type
                </a>
              </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse in" >
              <ul class="list-group">
                <% Tag.all.each do |c| %>
                  <li class="list-group-item">
                    <div class="checkbox">
                      <label>
                        <%= check_box_tag("post[tag][]", c.id, false , class: 'post-checkbox') %>
                        <%= c.name %>
                      </label>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
            <%= button_tag 'Filter', class: 'btn btn-md btn-primary hidden', id: "post-search-submit" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>